{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "g++",
			"args": [
				"-std=c++11",
				"-static-libgcc", // 静态链接
				"-Wall", // 开启额外警告


				"-I","${workspaceFolder}/",

				"-g",
        "${file}",

				"-o",
				"${workspaceFolder}/bin/run.o",//输出的文件名称以及路径

			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}